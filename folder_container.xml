<?xml version="1.0" encoding="UTF-8"?>
<div>
	<div class="title-bar">
		<![CDATA[$drag]]>
		<span style="position:absolute; left:5px; cursor:move;">
			<img src="folder.png" align="left" style="opacity:0.5;"/>
			<span style="color:white; font-weight:bold;">
				<![CDATA[$title=textContent]]>
			</span>
		</span>
		<span style="position:absolute; right:5px; cursor:pointer;">
			<img src="reload.png" style="opacity:0.5;" title="Reload">
				<![CDATA[$reload]]>
				<![CDATA[$reloadIcon=src]]>
			</img>
			<img src="close.png" style="opacity:0.5;" title="Close">
				<![CDATA[$close]]>
			</img>
		</span>
	</div>
	<div style="padding:2px; border:solid 1px; overflow:scroll; position:absolute; left:0px; right:0px; top:35px; bottom:0px;">
		<table style="width:100%; border-spacing:0px; empty-cells:show;">
			<![CDATA[$content !]]>
		</table>
	</div>
	<div style="position:absolute; width:1em; height:1em; right:0px; bottom:0px; cursor:se-resize; background-color:white; opacity:0;">
		<![CDATA[$resize]]>
	</div>
</div>

